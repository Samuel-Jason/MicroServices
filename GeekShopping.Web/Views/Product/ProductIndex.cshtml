@model IEnumerable<GeekShopping.Web.Models.ProductModel>

<br />
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Products list</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="ProductCreate" class="btn btn-outline-primary">
				<i class="fas fa-plus"></i>Create New Product
			</a>
		</div>
	</div>
	<table class="table">
		<tbody>
			@foreach (var item in Model)
			{

			<thead>
				<tr>
					<td>
							@item.Name
					</td>
					<td>
							@item.CategoryName
					</td>
					<td>
							@((item.Price).ToString("c"))
					</td>
				</tr>
			</thead>
			}
		</tbody>
	</table>
</div>