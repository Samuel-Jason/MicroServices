@model GeekShopping.Web.Models.ProductModel

<form asp-action="ProductUpdate">
	<input asp-for="Id" hidden>
	<br />
	<div class="container border-3 p-3">
		<h1 class="text-primary">Update Product</h1>

		<hr />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="col-2">
				<label asp-for="Name" disabled class="control-label pt-2" style="font-size=20px"></label>
			</div>

			<div class="col-10 pb-3">
				<label asp-for="Description" class="control-label" style="font-size: 20px;"></label>
				<textarea asp-for="Description" class="form-control"></textarea>
			</div>

			<div class="col-10 pb-3">
				<label asp-for="CategoryName" class="control-label" style="font-size: 20px;"></label>
				<input asp-for="CategoryName" class="form-control" />
			</div>

			<div class="col-10 pb-3">
				<label asp-for="ImageURL" class="control-label" style="font-size: 20px;"></label>
				<input asp-for="ImageURL" class="form-control" />
			</div>

			<div class="col-10 pb-3">
				<label asp-for="Price" class="control-label" style="font-size: 20px;"></label>
				<input asp-for="Price" disabled class="form-control" type="number" step="0.01" />
			</div>

			<div class="col-5 offset-2">
				<a asp-action="ProductIndex" class="btn-primary btn form-control">Back to list</a>
			</div>

			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-danger form-control" />
			</div>

		</div>
	</div>
</form>

@section Script {
	<partial name="_ValidationsScriptsPartial">
}
